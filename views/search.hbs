<div class="row">
  <h1>Filter</h1>
  <ul id="categoryFilters" class="filterSection">
    <strong>Show:</strong>
    <li>
        <input class="checkbox" checked="true" type="checkbox" value="all"/>
        <label>All</label>
    </li>
    <li>
        <input class="checkbox" id="relaxing" checked="false" type="checkbox" value="Relaxing"/>
        <label>Relaxing</label>
    </li>
    <!-- <li>
        <input class="checkbox" id="social" checked="false" type="checkbox" value="social"/>
        <label>Social</label>
    </li> -->
</ul>
</div>


<div class="row">
  <ul>
    {{#each allActivities}}
    <div class="col-md-4 infotest"
      data-category="{{ name }}">

      <div class="card">
        <div class="card-content">
          <a href="./activities/{{id}}">
            <div class="card-header">
              <h1 class="card-heading">{{title}}</h1>
            </div>
            <div class="card-body">
              <img class="img_url" src="{{img_url}}" alt="{{title}}">
            </div>
          </a>

          <div class="well text-center">
            <span class="label label-primary">{{time}}</span>
            <span class="label label-success">{{cost}}</span>
            <span class="label label-info">{{party}}</span>
            <span class="label label-warning">{{location}}</span>
            <span class="label label-danger">{{energy}}</span>
          </div>
        </div>
      </div>
    </div>
    {{/each}}

  </ul>
</div>
