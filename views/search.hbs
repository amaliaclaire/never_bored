      data-id="{{ title }}"
      data-category="{{ name }} {{ cost }} {{energy}}">
      <div class="card">
        <div class="card-content">
          <a href="./activities/{{id}}">
            <div class="card-header">
              <h1 class="card-heading">{{title}}</h1>
            </div>
            <div class="card-body">
              <img class="img_url" src="{{img_url}}" alt="{{title}}">
            </div>
          </a>

