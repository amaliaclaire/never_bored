<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel-heading">
				<div class="row">
					<div class="col-xs-6">
            <ul class="nav nav-tabs">
              <li><a href="/login" data-toggle="tab">Log In</a></li>
              <li class="active"><a href="/signup" data-toggle="tab">Sign Up</a></li>
            </ul>
					</div>
				</div>
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-lg-12">
            {{#if error}}
            <div class="alert alert-danger">
            {{ error }}
            </div>
            {{/if}}
						<form id="register-form" action="/users" method="post" role="form">
							<div class="form-group">
								<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">
							</div>
							<div class="form-group">
								<input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="">
							</div>
							<div class="form-group">
								<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password" value="">
							</div>
							<div class="form-group">
								<input type="password" name="confirm-password" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password" value="">
							</div>

                <div id="avatar_url">
                  <form>
                    <label class="avatars">
                    <input type="radio" name="avatar_url" value="http://www.geokitten.com/i/2.jpg"/>
                    <img style="height: 240px" src="http://www.geokitten.com/i/2.jpg" alt="It's an avatar. Just pick one."/>
                    </label>

                    <label class="avatars">
                    <input type="radio" name="avatar_url" value="http://www.globaltimes.cn/Portals/0/attachment/2015/2015-11-02/3d8cd0c9-2946-4ed6-8aff-003a4d6f2b43.jpeg"/>
                    <img style="height: 240px" src="http://www.globaltimes.cn/Portals/0/attachment/2015/2015-11-02/3d8cd0c9-2946-4ed6-8aff-003a4d6f2b43.jpeg" alt="It's an avatar. Just pick one."/>
                    </label>

                    <label class="avatars">
                    <input type="radio" name="avatar_url" value="http://wackynerd.com/wp-content/uploads/2015/09/baby-fox.jpg"/>
                    <img style="height: 240px" src="http://wackynerd.com/wp-content/uploads/2015/09/baby-fox.jpg" alt="It's an avatar. Just pick one."/>
                    </label>

                    <label class="avatars">
                    <input type="radio" name="avatar_url" value="https://s-media-cache-ak0.pinimg.com/736x/c0/10/f4/c010f4a03c0b10ef5fd609cb59d4bd96.jpg"/>
                    <img style="height: 240px" src="https://s-media-cache-ak0.pinimg.com/736x/c0/10/f4/c010f4a03c0b10ef5fd609cb59d4bd96.jpg" alt="It's an avatar. Just pick one."/>
                    </label>

                    <div class="form-group">
                      <div class="row">
                        <div class="col-sm-12 text-center">
                          <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="btn btn-success" value="Register Now">
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
                <br>
						</form>
					</div> <!--Column -->
				</div> <!-- Row -->
			</div> <!--Panel Body -->
		</div>
	</div>
</div>

  <script src="/js/jquery-3.2.0.min.js" charset="utf-8"></script>
  <script src="/js/requests.js" charset="utf-8"></script>
  <script type="text/javascript">
