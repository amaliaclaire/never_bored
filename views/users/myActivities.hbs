<div class="col-md-12">
  <ul class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/users/{{userId}}">My Account</a></li>
  <li class="active">My Activities</li>
</ul>

</div>
<h1>My Activities</h1>
<div id="main">
    <div class="col-md-12">
      {{#unless postedActivities}}
      <br>
      <p>You need to make some posts first!</p>
      {{/unless}}
          {{#each postedActivities}}
          <div class="col-md-6"
            data-id="{{ title }}"
            data-category="{{ name }} {{ cost }} {{energy}} {{time}} {{location}} {{party}} {{adult}}">
            <div class=" panel panel-default"> <!-- panel default -->
              <div class="panel-heading"> <!-- panel heading -->
                <h2>{{title}}</h2>
              </div> <!-- panel heading -->
              <div class="panel-body text-center">
                <div class="row">
                <div class="col-md-6">
                  <img class="img_url" src="{{img_url}}" alt="{{title}}">
                </div>
                <div class="col-md-6 text-center">
                  <ul class="text-left">
                  <li class="li-attr">With who: {{party}}</li>
                  <li class="li-attr">In or out: {{location}}</li>
                  <li class="li-attr">Cost: {{cost}}</li>
                  <li class="li-attr">Energy level: {{energy}}</li>
                  <li class="li-attr">Time: {{time}}</li>
                  <li class="li-attr">Age: {{adult}}</li>
                </ul>
                <span class="label label-primary">{{name}}</span>
              </div>
            </div>
              <hr />


            <div class="row">

              <div class="col-md-6 col-sm-6 text-center">
                <a href="/activities/edits/{{id}}"><button class="btn btn-md btn-info">Edit</button></a>
              </div>
              <div class="col-md-6 col-sm-6 text-center">
                <form action="/activities/{{id}}?_method=DELETE" method="POST">
                  <input id="deleteActivity" class="btn btn-md btn-danger" type="submit" name="delete" value="Delete">
                </form>
              </div>
            </div>
              </div>
              </div> <!-- panel body -->
            </div> <!-- panel default -->
          {{/each}}
      </div>
    </div>
</div>
