
<h1>My Account</h1>
  {{#each thisUser}}
  <div class="row">
    <div class="col-lg-4">
      <img src="{{avatar_url}}" alt="{{username}} avatar">
    </div>
    <div class="col-lg-4">
      <h2>{{username}}</h2>
      <h2>{{email}}</h2>
    </div>
    <div class="col-lg-4">
      <a href="/users/my-posted-activities" class="btn btn-info">My Posted Activities</a>
      <br>
      <hr />
      <a href="#" class="btn btn-info">My Settings</a>
      <br>
      <hr />
      <a href="/users/delete/{{id}}" class="btn btn-info">Delete My Account</a>
    </div>
  </div>
  <div class="row">

  </div>
  {{/each}}
